import "legion"

task f(inner : bool) : int
  var x = 5
  do
    var x = x + 10
    if inner then
      return x
    end
  end
  return x
end

task g(n : int) : int
  var x = 1
  for x = 2, 3 do
    if n == 2 then
      return x
    end
    var x = 3
    if n == 3 then
      return x
    end
  end
  return x
end

task main()
  assert(f(false) == 5)
  assert(f(true) == 15)
  assert(g(1) == 1)
  assert(g(2) == 2)
  assert(g(3) == 3)
end
legionlib.start(main)
