import "legion"

task g(r : region(int), p : ptr(int, r))
where reduces+(r) do
  @p += 20
end

-- You can also do reductions with read-write privileges.
task h(r : region(int), p : ptr(int, r))
where reads(r), writes(r) do
  @p += 300
end

task f() : int
  var r = region(int, 5)
  var p = new(ptr(int, r))
  @p = 1
  g(r, p)
  h(r, p)
  return @p
end

task main()
  legionlib.assert(f() == 321)
end
legionlib.start(main)
