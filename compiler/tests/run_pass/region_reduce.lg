task fill(r: region<int>)
  , writes(r)
{
  *(new<int@r>()) = 1;
  *(new<int@r>()) = 2;
  *(new<int@r>()) = 3;
  *(new<int@r>()) = 4;
  *(new<int@r>()) = 5;
}

task sum1(r: region<int>, s: region<int>, a: int@s)
  , reads(r)
  , reduces<+>(s)
{
  for x in r {
    *a += *x;
  }
}

task sum2(r: region<int>, s: region<int>, a: int@s)
  , reads(r)
  , reduces<+>(s)
{
  for x in r {
    reduce<+>(a, *x);
  }
}

task product1(r: region<int>, s: region<int>, a: int@s)
  , reads(r)
  , reduces<*>(s)
{
  for x in r {
    *a *= *x;
  }
}

task product2(r: region<int>, s: region<int>, a: int@s)
  , reads(r)
  , reduces<*>(s)
{
  for x in r {
    reduce<*>(a, *x);
  }
}

task main()
{
  let r = region<int>(5);
  fill(r);

  let s = region<int>(1);
  let a = new<int@s>();

  *a = 0;
  sum1(r, s, a);
  assert *a == 15;

  *a = 0;
  sum2(r, s, a);
  assert *a == 15;

  *a = 1;
  product1(r, s, a);
  assert *a == 120;

  *a = 1;
  product2(r, s, a);
  assert *a == 120;
}
