task fill(is: ispace<int>, r: array<is, int>)
  , writes(r)
{
  for i in is {
    r[i] = i;
  }
}

task sum(is: ispace<int>, r: array<is, int>): int
  , reads(r)
{
  var a = 0;
  for i in is {
    a += r[i];
  }
  return a;
}

task main()
{
  let is = ispace<int>(6);
  let r = array<is, int>();
  fill(is, r);
  assert sum(is, r) == 15;
}
