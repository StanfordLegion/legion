struct foo
{
  a: int,
  b: int,
  c: int,
}

task make_foo(r: region<foo>, a: int, b: int, c: int)
  : foo@r
  , reads(r)
  , writes(r)
{
  let p = new<foo@r>();
  *p = (*p){a: a, b: b, c: c};
  return p;
}

task read_foo(r: region<foo>, p: foo@r)
  : int
  , reads(r)
{
  let y = (*p).a + p->b * (*p).c;
  return y + 15;
}

task write_foo(r: region<foo>, p: foo@r)
  , writes(r)
{
  p->a = 2;
  p->b = 3;
  (*p).c = 4;
}

task main()
{
  let r = region<foo>(1);
  let p = make_foo(r, 1, 2, 3);
  assert read_foo(r, p) == 22;
  write_foo(r, p);
  assert read_foo(r, p) == 29;
}
