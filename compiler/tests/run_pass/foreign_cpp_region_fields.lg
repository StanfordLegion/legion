import "foreign_cpp_region_fields.h";

struct point
{
  x: int,
  y: int,
  z: int,
}

task initialize(r: region<point>, x: point@r)
  , reads(r.{x, y, z})
  , writes(r.y)
{
  foreign_initialize(r, x);
}

task iterate(r: region<point>)
  , reads(r.x)
  , writes(r.{x, z})
  , reduces<+>(r.y)
{
  foreign_iterate(r);
}

task validate(r: region<point>, x: point@r)
  , reads(r)
{
  assert x->x == 10;
  assert x->y == 22;
  assert x->z == 30;
}

task main()
{
  let r = region<point>(5);
  let x = new<point@r>();
  initialize(r, x);
  iterate(r);
  validate(r, x);
}
