task leaf_task(r: region<int>, x: int@r)
  : int
  , reads(r)
{
  return *x;
}

task make_partition(r: region<int>, i: int, j: int)
  : int
  , reads(r), writes(r)
{
  let x0 = new<int@r>();
  let x1 = new<int@r>();
  *x0 = i;
  *x1 = j;

  let c = color(color(coloring<r>(), x0, 0), x1, 1);
  let p = partition<r, disjoint>(c);

  var sum = 0;
  let is = ispace<int>(2);
  for i in is {
    let ri = p[i];
    for xi in ri {
      sum += leaf_task(ri, xi);
    }
  }
  return sum;
}

task main()
{
  let r = region<int>(2);
  assert make_partition(r, 3, 4) == 7;
}
