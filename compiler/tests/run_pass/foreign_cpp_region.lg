import "foreign_cpp_region.h";

task initialize(r: region<int>, x: int@r)
  , reads(r)
  , writes(r)
{
  foreign_initialize(r, x);
}

task iterate(r: region<int>)
  , reads(r)
  , writes(r)
{
  foreign_iterate(r);
}

task validate(r: region<int>, x: int@r)
  , reads(r)
{
  assert *x == 25;
}

task main()
{
  let r = region<int>(5);
  let x = new<int@r>();
  initialize(r, x);
  iterate(r);
  validate(r, x);
}
