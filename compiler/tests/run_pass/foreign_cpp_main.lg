task inc(r: region<int>, x: int@r)
  , reduces<+>(r)
{
  *x += 1;
}

task toplevel()
{
  let r = region<int>(1);
  let x = new<int@r>();
  *x = 0;
  inc(r, x);
  assert *x == 1;
}
