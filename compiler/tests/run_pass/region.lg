task foo(r: region<int>, p: int@r, x: int)
  : int
  , writes(r)
{
  let x = x + 1;
  *p = x;
  return x;
}

task bar(r: region<int>, p: int@r)
  : int
  , reads(r)
{
  return (*p) + 10;
}

task main()
{
  let r = region<int>(5);
  let p = new<int@r>();
  assert foo(r, p, 100) == 101;
  assert bar(r, p) == 111;
}
