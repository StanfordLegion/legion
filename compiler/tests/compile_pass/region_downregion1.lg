task make_partition(r: region<int>, x: int@r)
  , reads(r), writes(r)
{
  let c = color(coloring<r>(), x, 0);
  let p = partition<r, disjoint>(c);
  let r0 = p[0];
  let x0 = downregion<r0>(x);
  *x0 = 0;
  make_partition(r0, x0);
}

task main()
{
  let r = region<int>(1);
  let x = new<int@r>();
  make_partition(r, x);
}
