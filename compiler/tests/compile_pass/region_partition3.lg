task make_partition(r: region<int>)
  , reads(r), writes(r)
{
  let x: int@r = new<int@r>();
  let c: coloring<r> = color(coloring<r>(), x, 0);
  let p = partition<r, aliased>(c);
  let r0 = p[0];
  make_partition(r0);
}

task main()
{
  let r: region<int> = region<int>(1);
  make_partition(r);
}
